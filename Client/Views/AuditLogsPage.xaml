<Page x:Class="Client.Views.AuditLogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:customcontrols="clr-namespace:Client.CustomControls"
      xmlns:views="clr-namespace:Client.Views"
      xmlns:vms="clr-namespace:Client.ViewModels"
      xmlns:conv="clr-namespace:Client.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=vms:AuditLogsViewModel}"
      Title="AuditLogsPage"
      xml:lang="uk-UA">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
        <conv:SemesterToSemesterNameConverter x:Key="SemToSemName"/>

        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock TextWrapping="WrapWithOverflow" Text="{Binding}"></TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="CenteredCellStyle" BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
            <Setter Property="TextWrapping" Value="WrapWithOverflow" />
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <DataTemplate DataType="{x:Type vms:LogDetailsViewModel}">
            <views:LogDetailsPage />
        </DataTemplate>
    </Page.Resources>

    <materialDesign:DialogHost IsOpen="{Binding IsModalOpen, Mode=OneWay}">
        <materialDesign:DialogHost.DialogContent>
            <Frame Content="{Binding SelectedModal}" Validation.ErrorTemplate="{x:Null}" />
        </materialDesign:DialogHost.DialogContent>

        <Grid IsEnabled="{Binding IsNotLocked}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*" />
                <ColumnDefinition Width="0.25*" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <DataGrid CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" SelectionMode="Single"
ItemsSource="{Binding Logs, UpdateSourceTrigger=PropertyChanged}"
AutoGenerateColumns="False" TextBlock.TextAlignment="Center"
SelectedItem="{Binding SelectedLog, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Копіювати значення" Click="CopyCellValue_Click" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Часова мітка" HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
              Width="0.12*" Binding="{Binding Timestamp, StringFormat={}{0:dd MMMM yyyy HH:mm:ss} UTC}" 
                                            ElementStyle="{StaticResource CenteredCellStyle}" />

                        <DataGridTextColumn Header="Виконавець" HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
              Width="0.22*" Binding="{Binding UserId}" ElementStyle="{StaticResource CenteredCellStyle}" />

                        <DataGridTextColumn Header="Адреса виконавця" HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
              Width="0.11*" Binding="{Binding IpAddress}" ElementStyle="{StaticResource CenteredCellStyle}" />

                        <DataGridTextColumn Header="Тип дії" HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
              Width="0.09*" Binding="{Binding ActionType}" ElementStyle="{StaticResource CenteredCellStyle}" />

                        <DataGridTextColumn Header="Об'єкт" HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
              Width="0.1*" Binding="{Binding EntityName}" ElementStyle="{StaticResource CenteredCellStyle}" />

                        <DataGridTextColumn Header="Id об'єкта" HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
              Width="0.22*" Binding="{Binding EntityId}" ElementStyle="{StaticResource CenteredCellStyle}" />

                        <DataGridTextColumn Header="Опис дії" HeaderStyle="{StaticResource CenterGridHeaderStyle}" 
              Width="0.14*" Binding="{Binding Description}" ElementStyle="{StaticResource CenteredCellStyle}" />
                    </DataGrid.Columns>
                </DataGrid>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,5,0,5">
                    <Button Content="&#8656;" Command="{Binding PreviousPageCommand}" Margin="0,0,10,0"/>
                    <TextBlock VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} з {1}">
                                <Binding Path="CurrentPage"/>
                                <Binding Path="TotalPages"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <Button Content="&#8658;" Command="{Binding NextPageCommand}"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Column="1">
                <customcontrols:SearchBlock x:Name="searchBlock" Margin="5,0,0,20" Collection="{Binding Logs}" Filter="{Binding Filter}"
                                      CanSearch="True" CanDeepSearch="False" 
                                      Height="Auto"/>
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Margin="5,0,5,15" Text="Очікування результату..." 
                         Visibility="{Binding IsWaiting, Converter={StaticResource boolToVis}}"
         HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Foreground="Green"/>
                    <TextBlock Text="{Binding ErrorMessage}" Visibility="{Binding HasErrorMessage, Converter={StaticResource boolToVis}}"
         Margin="5,0,5,15" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Red" TextAlignment="Center" />

                    <TextBlock Text="Тип дії:" TextWrapping="WrapWithOverflow"/>
                    <ComboBox Margin="0,0,0,15" ItemsSource="{Binding ActionTypes}" SelectedItem="{Binding SelectedActionType}" />
                    <TextBlock Text="З:" TextWrapping="WrapWithOverflow"/>
                    <DatePicker Margin="0,0,0,15" SelectedDate="{Binding LeftBorder}" />
                    <TextBlock Text="По:" TextWrapping="WrapWithOverflow"/>
                    <DatePicker Margin="0,0,0,15" SelectedDate="{Binding RightBorder}" />
                    <CheckBox Margin="0,0,0,15" Content="Чи містить опис?" IsChecked="{Binding HasDescription}" 
                              VerticalContentAlignment="Center"/>
                    <Button Content="Переглянути зміни" Command="{Binding OpenLogDetailsCommand}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </materialDesign:DialogHost>
</Page>
